<h1>Listing All Books</h1>

<h2>Total Books: <%= @books.count %></h2>

<%= link_to 'New book', new_book_path %>

<table style="border: 1px; width: 100%">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Rating</th>
    <th colspan="2"></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.publisher %></td>
      <td><%= book.rating %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, data: 
                         { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>